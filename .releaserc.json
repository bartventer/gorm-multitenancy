{
    "debug": true,
    "branches": [
        "+([0-9])?(.{+([0-9]),x}).x",
        "master",
        {
            "name": "beta",
            "prerelease": true
        }
    ],
    "plugins": [
        [
            "@semantic-release/commit-analyzer",
            {
                "releaseRules": [
                    {
                        "type": "chore",
                        "scope": "deps",
                        "release": "patch"
                    }
                ]
            }
        ],
        [
            "@semantic-release/release-notes-generator",
            {
                "writerOpts": {
                    "types": [
                        {
                            "type": "chore",
                            "section": "Chores",
                            "hidden": false
                        }
                    ]
                }
            }
        ],
        "@semantic-release/github"
    ]
}